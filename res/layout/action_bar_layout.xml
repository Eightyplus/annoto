<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_toggle_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button android:id="@+id/action_bar_edit"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:background="@drawable/action_bar_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button android:id="@+id/action_bar_move"
        android:drawableStart="@android:drawable/ic_menu_more"
        android:background="@drawable/action_bar_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        />
  <Button android:id="@+id/action_bar_delete"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:background="@drawable/action_bar_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RadioGroup>
