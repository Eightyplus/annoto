<?xml version="1.0" encoding="utf-8"?>

<dk.eightyplus.annoto.view.MovableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded_white_no_padding">

  <dk.eightyplus.annoto.view.ClickMoveView
      android:id="@+id/button_unfold"
      android:visibility="visible"
      android:background="@drawable/arrow_down"
      android:layout_width="@dimen/unfold_button_size"
      android:layout_height="@dimen/unfold_button_size"
      android:layout_margin="@dimen/unfold_button_margin"
      />

  <dk.eightyplus.annoto.view.ClickMoveView
      android:id="@+id/button_fold"
      android:visibility="gone"
      android:background="@drawable/arrow_up"
      android:layout_width="@dimen/unfold_button_size"
      android:layout_height="@dimen/unfold_button_size"
      android:layout_margin="@dimen/unfold_button_margin"
      />

  <LinearLayout
      android:id="@+id/dynamic_buttons"
      android:visibility="gone"
      android:orientation="vertical"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

</dk.eightyplus.annoto.view.MovableLinearLayout>
